app_mode = production
instance_name = ${HOSTNAME}

[paths]
data = {{ grafana_paths['data'] }}
logs = {{ grafana_paths['log'] }}
plugins = {{ grafana_paths['plugins'] }}
provisioning = {{ grafana_paths['provisioning'] }}

[server]
protocol = {{ grafana_http['protocol'] }}
http_addr = {{ grafana_http['host'] }}
http_port = {{ grafana_http['port'] }}
domain = {{ grafana_http['domain'] }}
enforce_domain = false
root_url = %(protocol)s://%(domain)s:%(http_port)s/
router_logging = false
static_root_path = public
enable_gzip = true
cert_file =
cert_key =
socket = /tmp/grafana.sock

[database]
type = sqlite3
host = 127.0.0.1:3306
name = grafana
user = root
password =
url =
max_idle_conn = 2
max_open_conn =
log_queries =
ssl_mode = disable
ca_cert_path =
client_key_path =
client_cert_path =
server_cert_name =
path = grafana.db

[session]
provider = file
provider_config = sessions
cookie_name = grafana_sess
cookie_secure = false
session_life_time = 86400
gc_interval_time = 86400

[dataproxy]
logging = false

[analytics]
reporting_enabled = false
check_for_updates = false

[security]
admin_user = {{ grafana_auth['user'] }}
admin_password = {{ grafana_auth['password'] }}
secret_key = {{ grafana_auth['secret_key'] }}
login_remember_days = 7
cookie_username = grafana_user
cookie_remember_name = grafana_remember
disable_gravatar = false
data_source_proxy_whitelist =
disable_brute_force_login_protection = false

[snapshots]
external_enabled = false

[dashboards]
versions_to_keep = 20

[users]
allow_sign_up = false
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer
verify_email_enabled = false
login_hint = user
default_theme = {{ grafana_theme }}
viewers_can_edit = false

[auth]
disable_login_form = false
disable_signout_menu = false

[auth.basic]
enabled = true

[log]
mode = file
level = info
filters =

[log.file]
level =
format = text
log_rotate = true
max_lines = 1000000
max_size_shift = 28
daily_rotate = true
max_days = 7

[quota]
enabled = false

[alerting]
enabled = true
execute_alerts = true

[metrics]
enabled = false
